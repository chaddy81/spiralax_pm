<h1>Listing milestones</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Assigned</th>
    <th>Due</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @milestones.each do |milestone| %>
  <tr>
    <td><%= milestone.title %></td>
    <td><%= milestone.description %></td>
    <td><%= milestone.priority %></td>
    <td><%= milestone.assigned %></td>
    <td><%= milestone.due %></td>
    <td><%= link_to 'Show', project_milestone_path(@project, milestone) %></td>
    <td><%= link_to 'Edit', edit_project_milestone_path(@project, milestone) %></td>
    <td><%= link_to 'Destroy', project_milestone_path(@project, milestone), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

